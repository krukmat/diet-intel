<!DOCTYPE html>
<html lang="<%= i18n.language %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="<%= description || 'DietIntel - Intelligent nutrition tracking and meal planning' %>">
    <title><%= title %> | <%= appName %></title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#f0f9ff',
                            500: '#3b82f6',
                            600: '#2563eb',
                            700: '#1d4ed8'
                        },
                        success: {
                            50: '#f0fdf4',
                            500: '#22c55e',
                            600: '#16a34a'
                        },
                        warning: {
                            50: '#fffbeb',
                            500: '#f59e0b',
                            600: '#d97706'
                        }
                    }
                }
            }
        }
    </script>
    
    <!-- Custom CSS -->
    <style>
        .nutrition-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .meal-card {
            transition: all 0.3s ease;
        }
        .meal-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }
        .progress-ring {
            transition: stroke-dashoffset 0.35s;
            transform: rotate(-90deg);
            transform-origin: 50% 50%;
        }
    </style>
    
    <!-- Chart.js for nutrition charts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- App CSS -->
    <link rel="stylesheet" href="/stylesheets/main.css">
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Navigation -->
    <nav class="bg-white shadow-sm border-b">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex">
                    <div class="flex-shrink-0 flex items-center">
                        <a href="/" class="flex items-center">
                            <div class="w-8 h-8 bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg flex items-center justify-center">
                                <span class="text-white font-bold text-lg">üçé</span>
                            </div>
                            <span class="ml-2 text-xl font-bold text-gray-900"><%= appName %></span>
                        </a>
                    </div>
                    <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
                        <a href="/" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                            <%= t('navigation.home') %>
                        </a>
                        <a href="/plans" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                            <%= t('navigation.mealPlans') %>
                        </a>
                        <a href="/docs" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                            <%= t('navigation.apiDocs') %>
                        </a>
                        <a href="/about" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                            <%= t('navigation.about') %>
                        </a>
                    </div>
                </div>
                <div class="hidden sm:ml-6 sm:flex sm:items-center space-x-4">
                    <!-- Language Switcher -->
                    <div class="relative group">
                        <button class="flex items-center space-x-2 text-gray-700 hover:text-gray-900 px-2 py-1 rounded-md" onclick="toggleLanguageMenu()">
                            <span class="text-lg"><%= i18n.language === 'es' ? 'üá™üá∏' : 'üá∫üá∏' %></span>
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                            </svg>
                        </button>
                        <!-- Language dropdown menu -->
                        <div id="language-menu" class="hidden absolute right-0 mt-2 w-40 bg-white rounded-md shadow-lg py-1 z-50">
                            <form method="POST" action="/language/switch" class="block">
                                <input type="hidden" name="redirect" value="<%= req.originalUrl || '/' %>">
                                <button type="submit" name="language" value="en" class="flex items-center w-full px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 <%= i18n.language === 'en' ? 'bg-blue-50 text-blue-700' : '' %>">
                                    <span class="mr-3">üá∫üá∏</span>English
                                    <% if (i18n.language === 'en') { %><span class="ml-auto text-blue-600">‚úì</span><% } %>
                                </button>
                                <button type="submit" name="language" value="es" class="flex items-center w-full px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 <%= i18n.language === 'es' ? 'bg-blue-50 text-blue-700' : '' %>">
                                    <span class="mr-3">üá™üá∏</span>Espa√±ol
                                    <% if (i18n.language === 'es') { %><span class="ml-auto text-blue-600">‚úì</span><% } %>
                                </button>
                            </form>
                        </div>
                    </div>

                    <% if (locals.isAuthenticated && locals.currentUser) { %>
                        <!-- User is logged in -->
                        <div class="flex items-center space-x-3">
                            <span class="text-sm text-gray-700">
                                <%= t('auth.hello') %>, <strong><%= currentUser.full_name.split(' ')[0] %></strong>
                                <% if (currentUser.is_developer) { %>
                                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800">
                                    <%= t('auth.developer') %>
                                </span>
                                <% } %>
                            </span>
                            <div class="relative group">
                                <button class="flex items-center space-x-2 text-gray-700 hover:text-gray-900">
                                    <div class="w-8 h-8 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center">
                                        <span class="text-white text-sm font-bold">
                                            <%= currentUser.full_name.charAt(0).toUpperCase() %>
                                        </span>
                                    </div>
                                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                                    </svg>
                                </button>
                                <!-- Dropdown menu -->
                                <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-50 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                                    <a href="/dashboard" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                        üè† <%= t('navigation.dashboard') %>
                                    </a>
                                    <a href="/profile" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                        üë§ <%= t('navigation.profile') %>
                                    </a>
                                    <a href="/plans" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                        üçΩÔ∏è <%= t('navigation.myMealPlans') %>
                                    </a>
                                    <% if (currentUser.is_developer) { %>
                                    <div class="border-t border-gray-100"></div>
                                    <a href="/developer" class="block px-4 py-2 text-sm text-purple-700 hover:bg-purple-50">
                                        üîß <%= t('navigation.developerTools') %>
                                    </a>
                                    <% } %>
                                    <div class="border-t border-gray-100"></div>
                                    <form method="POST" action="/auth/logout" class="block">
                                        <button type="submit" class="w-full text-left px-4 py-2 text-sm text-red-700 hover:bg-red-50">
                                            üö™ <%= t('auth.signOut') %>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% } else { %>
                        <!-- User is not logged in -->
                        <div class="flex items-center space-x-3">
                            <a href="/auth/login" class="text-gray-700 hover:text-gray-900 px-3 py-2 text-sm font-medium">
                                <%= t('auth.signIn') %>
                            </a>
                            <a href="/auth/register" class="bg-primary-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-primary-700 transition-colors">
                                <%= t('auth.getStarted') %>
                            </a>
                        </div>
                    <% } %>
                </div>
                <!-- Mobile menu button -->
                <div class="flex items-center sm:hidden">
                    <button type="button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100" onclick="toggleMobileMenu()">
                        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
        <!-- Mobile menu -->
        <div id="mobile-menu" class="hidden sm:hidden">
            <div class="pt-2 pb-3 space-y-1">
                <a href="/" class="text-gray-500 hover:text-gray-700 block px-3 py-2 text-base font-medium">Home</a>
                <a href="/plans" class="text-gray-500 hover:text-gray-700 block px-3 py-2 text-base font-medium">Meal Plans</a>
                <a href="/docs" class="text-gray-500 hover:text-gray-700 block px-3 py-2 text-base font-medium">API Docs</a>
                <a href="/about" class="text-gray-500 hover:text-gray-700 block px-3 py-2 text-base font-medium">About</a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        <%- body %>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white">
        <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <div class="col-span-2">
                    <div class="flex items-center mb-4">
                        <div class="w-8 h-8 bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg flex items-center justify-center">
                            <span class="text-white font-bold text-lg">üçé</span>
                        </div>
                        <span class="ml-2 text-xl font-bold"><%= appName %></span>
                    </div>
                    <p class="text-gray-400 mb-4">
                        Intelligent nutrition tracking with barcode scanning, OCR technology, and AI-powered meal planning.
                    </p>
                    <div class="flex space-x-4">
                        <span class="text-sm text-gray-400">API Status: </span>
                        <span id="api-status" class="text-sm">Checking...</span>
                    </div>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-4">Features</h3>
                    <ul class="space-y-2 text-gray-400">
                        <li>Barcode Scanning</li>
                        <li>OCR Label Reading</li>
                        <li>Meal Planning</li>
                        <li>Nutrition Analytics</li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-4">API</h3>
                    <ul class="space-y-2 text-gray-400">
                        <li><a href="<%= apiUrl %>/docs" target="_blank" class="hover:text-white">Interactive Docs</a></li>
                        <li><a href="<%= apiUrl %>/redoc" target="_blank" class="hover:text-white">ReDoc</a></li>
                        <li><a href="/docs" class="hover:text-white">Usage Guide</a></li>
                    </ul>
                </div>
            </div>
            <div class="mt-8 pt-8 border-t border-gray-800 text-center text-gray-400">
                <p>&copy; <%= currentYear %> <%= appName %>. Built with ‚ù§Ô∏è for better nutrition tracking.</p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script>
        // Mobile menu toggle
        function toggleMobileMenu() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        }

        // Language menu toggle
        function toggleLanguageMenu() {
            const menu = document.getElementById('language-menu');
            menu.classList.toggle('hidden');
        }

        // Close language menu when clicking outside
        document.addEventListener('click', function(event) {
            const menu = document.getElementById('language-menu');
            const button = event.target.closest('[onclick="toggleLanguageMenu()"]');
            if (!button && !menu.contains(event.target)) {
                menu.classList.add('hidden');
            }
        });

        // Check API status
        async function checkAPIStatus() {
            try {
                const response = await fetch('/api/health');
                const data = await response.json();
                const statusElement = document.getElementById('api-status');
                
                if (data.api_status?.status === 'healthy') {
                    statusElement.innerHTML = '<span class="text-green-400">üü¢ Healthy</span>';
                } else {
                    statusElement.innerHTML = '<span class="text-red-400">üî¥ Unhealthy</span>';
                }
            } catch (error) {
                const statusElement = document.getElementById('api-status');
                statusElement.innerHTML = '<span class="text-red-400">üî¥ Offline</span>';
            }
        }

        // Format numbers with commas
        function formatNumber(num) {
            return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ',');
        }

        // Format calories
        function formatCalories(calories) {
            return `${Math.round(calories)} kcal`;
        }

        // Format macros
        function formatMacros(grams, label) {
            return `${Math.round(grams * 10) / 10}g ${label}`;
        }

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            checkAPIStatus();
        });
    </script>
</body>
</html>
