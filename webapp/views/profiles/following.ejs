<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= profile.handle %>'s Following - DietIntel</title>
    <link rel="stylesheet" href="/stylesheets/main.css">
</head>
<body>
    <%- include('../partials/header') %>

    <div class="container">
        <div class="profile-nav">
            <h2><%= profile.handle %>'s Following</h2>
            <p class="following-count"><%= items.length %> following</p>
        </div>

        <div class="user-list">
            <% if (items && items.length > 0) { %>
                <% items.forEach(function(following) { %>
                    <div class="user-list-item">
                        <div class="user-avatar">
                            <% if (following.avatar_url) { %>
                                <img src="<%= following.avatar_url %>" alt="Avatar" class="avatar-img">
                            <% } else { %>
                                <div class="avatar-placeholder"><%= following.handle.charAt(0).toUpperCase() %></div>
                            <% } %>
                        </div>

                        <div class="user-info">
                            <h3>@<%= following.handle %></h3>
                            <small class="follow-date">Following since <%= new Date(following.since).toLocaleDateString() %></small>
                        </div>

                        <% if (currentUser && currentUser.id !== following.user_id) { %>
                            <div class="follow-action">
                                <!-- Follow/Unfollow button for this user -->
                                <form action="/profiles/<%= following.user_id %>/follow" method="POST" class="follow-form">
                                    <input type="hidden" name="action" value="follow">
                                    <button type="submit" class="btn btn-sm btn-follow">Follow</button>
                                </form>
                            </div>
                        <% } %>
                    </div>
                <% }); %>

                <!-- Load More Button or Pagination Links -->
                <% if (next_cursor) { %>
                    <div class="load-more-container">
                        <a href="?cursor=<%= next_cursor %>" class="btn btn-secondary">Load More Users</a>
                    </div>
                <% } %>
            <% } else { %>
                <div class="empty-state">
                    <p>Not following anyone yet</p>
                    <small>This user hasn't followed anyone yet.</small>
                </div>
            <% } %>
        </div>

        <!-- Navigation -->
        <div class="back-navigation">
            <a href="/profiles/<%= profile.user_id %>" class="btn btn-secondary">‚Üê Back to Profile</a>
        </div>
    </div>

    <%- include('../partials/footer') %>

    <script src="/js/follow.js"></script>
</body>
</html>
