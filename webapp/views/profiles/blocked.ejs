<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blocked Users - <%= currentUser.full_name %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header">
                        <h3>Blocked Users</h3>
                        <p class="mb-0 text-muted">Users you have blocked</p>
                    </div>
                    <div class="card-body">
                        <% if (blockedUsers && blockedUsers.items && blockedUsers.items.length > 0) { %>
                            <div class="list-group list-group-flush">
                                <% blockedUsers.items.forEach(user => { %>
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div class="d-flex align-items-center">
                                            <img src="<%= user.avatar_url || '/images/default-avatar.png' %>"
                                                 alt="<%= user.handle %>"
                                                 class="rounded-circle mr-3"
                                                 style="width: 40px; height: 40px;">
                                            <div>
                                                <h6 class="mb-0">
                                                    <a href="/profiles/<%= user.user_id %>" class="text-decoration-none">
                                                        <%= user.handle %>
                                                    </a>
                                                </h6>
                                                <small class="text-muted">
                                                    Blocked <%= new Date(user.since).toLocaleDateString() %>
                                                </small>
                                                <% if (user.reason) { %>
                                                    <br>
                                                    <small class="text-muted">Reason: <%= user.reason %></small>
                                                <% } %>
                                            </div>
                                        </div>
                                        <form action="/profiles/<%= user.user_id %>/block" method="POST" class="d-inline">
                                            <input type="hidden" name="action" value="unblock">
                                            <button type="submit" class="btn btn-sm btn-outline-primary">
                                                Unblock
                                            </button>
                                        </form>
                                    </div>
                                <% }); %>
                            </div>

                            <% if (blockedUsers.next_cursor) { %>
                                <div class="text-center mt-3">
                                    <button class="btn btn-outline-primary" onclick="loadMoreBlocked()">
                                        Load More
                                    </button>
                                </div>
                            <% } %>
                        <% } else { %>
                            <div class="text-center py-4">
                                <p class="text-muted mb-0">You haven't blocked any users yet.</p>
                            </div>
                        <% } %>
                    </div>
                </div>

                <div class="mt-3">
                    <a href="/profiles/<%= currentUser.id %>" class="btn btn-secondary">Back to Profile</a>
                </div>
            </div>
        </div>
    </div>

    <script>
        function loadMoreBlocked() {
            // TODO: Implement pagination for blocked users
            console.log('Load more blocked users - cursor: <%= blockedUsers.next_cursor %>');
        }
    </script>
</body>
</html>
