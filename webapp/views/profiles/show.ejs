<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= profile.handle %> - Profile</title>
</head>
<body>
    <%- include('../partials/header') %>

    <div class="container">
        <div class="profile-card">
            <!-- Avatar -->
            <% if (profile.avatar_url) { %>
                <img src="<%= profile.avatar_url %>" alt="Profile picture" class="profile-avatar">
            <% } else { %>
                <div class="profile-avatar-placeholder">üë§</div>
            <% } %>

            <!-- Handle -->
            <h1>@<%= profile.handle %></h1>

            <!-- Bio -->
            <% if (profile.bio) { %>
                <p class="profile-bio"><%= profile.bio %></p>
            <% } %>

            <!-- Visibility status -->
            <p class="profile-visibility">
                Visibility: <%= profile.visibility.split('_').join(' ') %>
            </p>

            <!-- Edit button for owner -->
            <% if (canEdit) { %>
                <a href="/profiles/me/edit" class="btn btn-primary">Edit Profile</a>
            <% } %>

            <!-- Stats section -->
            <div class="profile-stats">
                <div class="stat-item">
                    <span class="stat-number"><%= profile.stats.followers_count %></span>
                    <span class="stat-label">Followers</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number"><%= profile.stats.following_count %></span>
                    <span class="stat-label">Following</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number"><%= profile.stats.posts_count %></span>
                    <span class="stat-label">Posts</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number"><%= profile.stats.points_total %></span>
                    <span class="stat-label">Points</span>
                </div>
            </div>
        </div>

        <!-- Posts section -->
        <div class="profile-posts">
            <h2>Recent Posts</h2>
            <% if (profile.posts_notice) { %>
                <div class="posts-notice">
                    <p><%= profile.posts_notice %></p>
                </div>
            <% } else { %>
                <% if (profile.posts && profile.posts.length > 0) { %>
                    <% profile.posts.forEach(function(post) { %>
                        <div class="post-card">
                            <p class="post-text"><%= post.text %></p>
                            <small class="post-date"><%= new Date(post.created_at).toLocaleDateString() %></small>
                            <div class="post-stats">
                                <span>üëç <%= post.counters.likes || 0 %></span>
                                <span>üí¨ <%= post.counters.comments || 0 %></span>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p class="no-posts">No posts yet.</p>
                <% } %>
            <% } %>
        </div>

        <!-- Navigation -->
        <div class="profile-nav">
            <a href="/dashboard" class="btn btn-secondary">‚Üê Back to Dashboard</a>
        </div>
    </div>

    <%- include('../partials/footer') %>
</body>
</html>
