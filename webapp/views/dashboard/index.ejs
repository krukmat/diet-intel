<script>
// Check API status for dashboard
async function checkDashboardAPIStatus() {
    try {
        const response = await fetch('/api/health');
        const data = await response.json();
        const statusElement = document.getElementById('api-status-dashboard');
        
        if (data.api_status?.status === 'healthy') {
            statusElement.innerHTML = '<span class="text-green-600">ğŸŸ¢ Healthy</span>';
        } else {
            statusElement.innerHTML = '<span class="text-red-600">ğŸ”´ Unhealthy</span>';
        }
    } catch (error) {
        const statusElement = document.getElementById('api-status-dashboard');
        statusElement.innerHTML = '<span class="text-red-600">ğŸ”´ Offline</span>';
    }
}

document.addEventListener('DOMContentLoaded', function() {
    checkDashboardAPIStatus();
});
</script>