<!-- Header partial for tests -->
<header>
    <nav class="navbar">
        <div class="container">
            <a href="/" class="brand"><%= appName || 'DietIntel' %></a>
            <% if (currentUser) { %>
                <div class="user-menu">
                    <span>Welcome, <%= currentUser.full_name %></span>
                    <a href="/profiles/<%= currentUser.id %>">Profile</a>
                    <a href="/logout">Logout</a>
                </div>
            <% } else { %>
                <div class="auth-links">
                    <a href="/auth/login">Login</a>
                    <a href="/auth/register">Register</a>
                </div>
            <% } %>
        </div>
    </nav>
</header>
