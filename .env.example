# DietIntel Environment Configuration Example
# Copy this file to .env and update values for your environment

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL=postgresql://dietintel_user:dietintel_password@localhost:5432/dietintel
POSTGRES_DB=dietintel
POSTGRES_USER=dietintel_user
POSTGRES_PASSWORD=your_secure_postgres_password_here

# ================================
# REDIS CONFIGURATION  
# ================================
REDIS_URL=redis://:your_redis_password@localhost:6379/0
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_CACHE_TTL_HOURS=24
REDIS_MAX_CONNECTIONS=20

# ================================
# OPEN FOOD FACTS API
# ================================
OFF_BASE_URL=https://world.openfoodfacts.org
OFF_TIMEOUT=10.0
OFF_RATE_LIMIT_DELAY=0.1
OFF_MAX_RETRIES=3
OFF_RETRY_DELAY=1.0

# ================================
# SECURITY
# ================================
SECRET_KEY=your_very_secret_key_minimum_32_characters_long_change_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ================================
# APPLICATION CONFIGURATION
# ================================
ENVIRONMENT=development
LOG_LEVEL=DEBUG
API_PORT=8000
API_REPLICAS=1

# ================================
# DEVELOPMENT SPECIFIC
# ================================
# Set to "tools" to include pgAdmin and other dev tools
COMPOSE_PROFILES=

# ================================
# PRODUCTION SPECIFIC
# ================================
# Uncomment and set for production environment
# LOG_LEVEL=INFO
# OFF_RATE_LIMIT_DELAY=0.2
# OFF_MAX_RETRIES=5
# OFF_RETRY_DELAY=2.0
# ACCESS_TOKEN_EXPIRE_MINUTES=60
# API_REPLICAS=3