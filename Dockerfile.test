# Dockerfile for DietIntel Test Environment
FROM python:3.10-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better Docker layer caching
COPY requirements.txt .

# Install Python dependencies including test dependencies
RUN pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir \
    fastapi \
    pytest \
    pytest-asyncio \
    pytest-cov \
    httpx \
    aioredis

# Copy source code
COPY . .

# Set environment variables for testing
ENV PYTHONPATH=/app
ENV REDIS_URL=redis://redis:6379
ENV DATABASE_URL=sqlite:///./test_dietintel.db
ENV ENVIRONMENT=test

# Create directory for coverage reports
RUN mkdir -p /app/htmlcov

# Default command for running tests
CMD ["pytest", "tests/", "-v", "--cov=app", "--cov-report=html", "--cov-report=term"]